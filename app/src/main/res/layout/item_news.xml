<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardCornerRadius="@dimen/tarjeta_cardCornerRadius"
                                    card_view:cardElevation="@dimen/tarjeta_cardElevation"
                                    card_view:cardUseCompatPadding="true"
                                    card_view:contentPadding="@dimen/card_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageNoticia"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvNoticia"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imageNoticia"
            android:fontFamily="sans-serif-condensed"
            android:text="Afectaciones por el sismo en MÃ©xico, Guatemala y El Salvador (VIDEO) - Canal 44 El Canal de las Noticias"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvNoticia"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:text="20202020202"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>